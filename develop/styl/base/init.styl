s = 0.5s 1s 1.25s 1.5s 1.75s

.logo
  
  &::before
    transform rotate(-360deg)
    opacity 0
    transition all 1s ease

  &::after
    transform translate3d(30px, 0, 0)
    opacity 0
    transition all 0.5s ease 

  &.init
    
    &::before 
      transform rotate(0)
      opacity 1

    &::after 
      transform translate3d(0, 0, 0)
      opacity 1

      
.page_header
  transform translate3d(0, -30px, 0)
  opacity 0

  &.init
    transition all 0.5s ease s[0]
    transform translate3d(0, 0, 0)
    opacity 1


.nav_item,
.nav_item::before,
.nav_item::after
  opacity 0
  
.init .nav_item
  opacity 1

  &::before,
  &::after
    opacity 1

  &:nth-of-type(1)
    transition opacity 0.5s ease s[1]

  &:nth-of-type(2)
    transition opacity 0.5s ease s[2]

    &::before,
    &::after
      transition all 0.5s ease s[4]
  
  &:nth-of-type(3)
    transition opacity 0.5s ease s[3]


.search
  transform translate3d(30px, 0, 0)
  opacity 0

  &.init
    transition all 0.5s ease s[0]
    transform translate3d(0, 0, 0)
    opacity 1


.social
  transform translate3d(0, 30px, 0)
  opacity 0

.init .social
  transform translate3d(0, 0, 0)
  opacity 1

  &:nth-of-type(1)
    transition all 0.5s ease s[1]

  &:nth-of-type(2)
    transition all 0.5s ease s[2]
  
  &:nth-of-type(3)
    transition all 0.5s ease s[3]  

.page_wrapper
  opacity 0

  &.init
    opacity 1
    transition all 1.5s ease s[4]
