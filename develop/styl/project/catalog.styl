.catalog-link
  display inline-block
  position relative
  overflow hidden
  width 292px
  height 75px
  line-height 66px
  letter-spacing -1px;
  text-align center
  font-size 24px
  text-decoration none
  background-color alpha(black, 0.75)

  &::before
    display block
    position absolute
    left 0
    top 0
    transform translate3d(-100%, 0, 0)
    width 100%
    height 100%
    background-color white
    content ''
    transition all 0.5s ease

  &::after
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    color white
    content 'Перейти в галерею'
    transition all 0.4s ease

  &:hover
    
    &::before  
      transform translate3d(0, 0, 0)

    &::after
      color black

