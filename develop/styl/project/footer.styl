.footer
  m_inline-blocks()
  overflow hidden
  position fixed
  z-index 2
  bottom 0
  left 0
  padding-top 19px
  width 100%
  height 60px
  text-align center

  &::before
    position absolute
    left 0
    bottom 0
    width 100%
    height 100vh
    background-position center center
    background-size cover
    content ''

.socials
  m_inline-blocks()

.social
  position relative
  margin 0 36px

  &::before,
  &::after
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    content ''
    transition all 0.3s ease

  &::before
    opacity 0

  &::after
    opacity 1

  &:hover
    
    &::before
      opacity 1

    &::after
      opacity 0

.social__fb
  width 10px
  height 19px

  &::before
    background-image url(public'images/fb__hover.png')

  &::after  
    background-image url(public'images/fb.png')

.social__tw
  width 27px
  height 19px

  &::before
    background-image url(public'images/tw__hover.png')

  &::after  
    background-image url(public'images/tw.png')

.social__vk
  width 27px
  height 15px

  &::before
    background-image url(public'images/vk__hover.png')

  &::after  
    background-image url(public'images/vk.png')    

    
