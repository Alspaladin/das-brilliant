.modal_wrapper
  display block
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.8) 100%)
  opacity 0
  transition opacity 0.5s ease
  z-index 0
  text-align center
  overflow auto
  
  &:after
    display inline-block
    vertical-align middle  
    height 100%
    width 0
    content ''
    
  &.show
    z-index 999
    opacity 1
    
    .modal_container
      transition all 0.5s ease
      transform translate3d(0,0,0)
      opacity 1
      
  &.hidding    
    opacity 0
    
    .modal_container
      transform translate3d(0,50px,0)
      opacity 0

.modal_container
  z-index 9999
  margin 100px 0
  position relative
  display inline-block
  vertical-align middle
  text-align left
  transform translate3d(0,-50px,0)
  opacity 0
  max-width 60%
  
.modal_content  
  background-color #fff
  padding 60px
  z-index 99999