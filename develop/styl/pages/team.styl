.page__team
  
  &,
  .header::before,
  .footer::before
    background-image url(public'images/bg_team.jpg')

  .nav
    margin-bottom 73px

  .page_container
    padding-top 51px

.team_container
  m_clearfix()
  margin auto
  width 1081px

.team-item
  position relative
  float left
  margin-bottom 27px
  padding 14px 17px
  width 250px
  height 250px
  background-color white

  &::before
    position absolute
    opacity 0
    left 0 
    top 0
    width 100%
    height 100%
    background-color alpha(black, 0.75)
    content ''
    transition all 0.3s ease

  &:not(:nth-of-type(4n))
    margin-right 27px

  &:nth-last-of-type(4 - n)
    margin-bottom 0

  &:hover
    
    &::before
      opacity 1

    .team-item_name,
    .team-item_profession 
      opacity 1
      transform translate3d(0, 0, 0)

.team-item_name
  position relative
  z-index 2
  transform translate3d(-20px, 0, 0)
  margin-bottom 7px
  color red
  font-size 24px
  font-weight 300     
  opacity 0
  transition all 0.3s ease

.team-item_profession
  position relative
  z-index 2
  transform translate3d(20px, 0, 0)
  color white
  font-size 14px
  font-weight 300 
  opacity 0
  transition all 0.3s ease
    
    