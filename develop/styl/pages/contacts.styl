.page__contacts
  
  &,
  .header::before,
  .footer::before
    background-image url(public'images/bg_contacts.jpg')

  .nav
    margin-bottom 73px

  .page_container
    padding-top 51px

.contacts-sections
  width 600px
  margin 0 auto

.contact_link_info
  color #fff
  line-height 80px
  border-bottom 1px dashed
  text-decoration none

.contact_link_info:hover
 border-bottom none

.contacts_section
  font-family 'Didact Gothic', sans-serif
  line-height 21px
  font-size 18px 

  &:nth-of-type(1)
    margin-bottom 40px
    border-bottom 1px solid white
    padding 0 135px 40px

  &:nth-of-type(2)
    margin 0 76px 40px
    border-bottom 1px solid white
    padding 0 90px 40px

    span
      font-family 'Exo 2', sans-serif

  &:nth-of-type(3)
    text-align center
    line-height 24px
    
    a, span
      text-decoration none
      font-family 'Exo 2', sans-serif
      color white

    a:hover
      text-decoration underline  
